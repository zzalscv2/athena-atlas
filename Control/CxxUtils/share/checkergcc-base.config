[thread.check_paths]
# Hack: disable checking of auto-generated Cint dictionaries:
-CMakeFiles

[thread.thread_safe_calls]
# Don't warn about calls to unchecked code for paths containing any
# of these strings.
/Gaudi
/rootsys/
/ROOT/
/CORAL
/COOL
/CLHEP
/GeoModelKernel
/GeoGenericFunctions
/ExpressionEvaluator
/GeoModelXml
/GeoModelIO
include/Acts
/MCUtils
/HepMC
/HepPDT
/eformat
/Geant
/tdaq
/yampl
/lwtnn
/fastjet


[thread.init_methods]
# Allow overriding these methods with inconsistent threading attributes.
Gaudi::Algorithm::stop
Gaudi::Algorithm::start
Gaudi::Algorithm::initialize
Converter::initialize
Converter::finalize
IStateful::initialize
Service::initialize
Service::start
Service::stop
AlgTool::initialize
AlgTool::start
AlgTool::stop
IAlgTool::initialize
Gaudi::Algorithm::finalize
Service::finalize
AlgTool::finalize
MinimalEventLoopMgr::initialize
MinimalEventLoopMgr::finalize
